pipeline {
    agent any


       tools {
        maven 'maven3'
    }

    stages {
      stage('checkout') {
            steps {
                echo 'Cloning GIT HUB Repo '
				git branch: 'main', url: 'https://github.com/jvvenkateshgh/jenkins-cicd.git'
            }  
        }
		
	 stage('sonar') {
            steps {
                echo 'scanning project'
                sh 'ls -ltr'
                
                sh ''' mvn sonar:sonar \\
                      -Dsonar.host.url=http://3.83.4.112:9000 \\
                      -Dsonar.login=squ_8de008468159609fa4e55e85cafd2f4c085e2a9c'''
            }
    	}
		
        stage('Build Artifact') {
            steps {
                echo 'Build Artifact'
				sh 'mvn clean package'
            }
        }
		stage('Docker Image') {
            steps {
                echo 'Docker Image building'
				sh 'docker build -t jvvenkateshdh/jenkins-cicd:${BUILD_NUMBER} .'
            }
        }
		
		
       stage('Push to Dockerhub') {
            steps {
			 script {
			withCredentials([string(credentialsId: 'dockerhub', variable: 'dockerhub')]) 
			{
            sh 'docker login -u jvvenkateshdh -p ${dockerhub}'
			
			 }
			   sh 'docker push jvvenkateshdh/jenkins-cicd:${BUILD_NUMBER}'
			   
           
				}
				
            }
        }
		
	   stage('Update Deployment File') {
		
		 environment {
            GIT_REPO_NAME = "jenkins-cicd"
            GIT_USER_NAME = "jvvenkateshgh"
        }
		
            steps {
                echo 'Update Deployment File'
				withCredentials([string(credentialsId: 'githubtoken', variable: 'githubtoken')]) 
				{
                  sh '''
                    git config user.email "jvvenkatesh80@gmail.com"
                    git config user.name "jvvenkateshgh"
                    BUILD_NUMBER=${BUILD_NUMBER}
                    sed -i "s/jenkins-cicd:.*/jenkins-cicd:${BUILD_NUMBER}/g" deploymentfiles/deployment.yml
                    git add .
                    
                    git commit -m "Update deployment image to version ${BUILD_NUMBER}"

                    git push https://${githubtoken}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
                '''
				  
                 }
				
            }
        }
		
		
			
    }

}
